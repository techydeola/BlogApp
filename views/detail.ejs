<%- include('./partials/header.ejs') %>

<% if (blog) { %>
    <div class="detail">
        <img
          src="data:image/<%=blog.image.contentType%>;base64,
                  <%=blog.image.data.toString('base64')%>"
        />
        <div class="post__content">
            <h1><%= blog.title %></h1>
            <p><%= blog.content %></p>
        </div>
    </div>
<% } %>

<%- include('./partials/footer.ejs') %>